<!-- training/templates/training/trainer.html -->
{% extends 'francontcube/partials/base.html' %}
{% load static %}

{% block title %}{{ algorithm.name }} - Entra√Ænement{% endblock %}

{% block content %}
<div class="container py-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{% url 'training:hub' %}">Entra√Ænement</a></li>
            <li class="breadcrumb-item active">{{ algorithm.name }}</li>
        </ol>
    </nav>
</div>

<div id="training-app"></div>

<script>
  // Passer les donn√©es Django au composant React
  window.algorithmStats = {% if stats %}{{ stats|safe }}{% else %}null{% endif %};
  window.algorithmName = "{{ algorithm.name }}";
  window.algorithmNotation = "{{ algorithm.notation }}";
  window.algorithmReps = {{ algorithm.repetitions }};
  window.algorithmDifficulty = "{{ algorithm.get_difficulty_display }}";
  window.saveTimeUrl = "{% url 'training:save_time' algorithm.slug %}";
  window.leaderboardUrl = "{% url 'training:leaderboard' algorithm.slug %}";
  window.hubUrl = "{% url 'training:hub' %}";
</script>

<script crossorigin src="https://unpkg.com/react@18/umd/react.production.min.js"></script>
<script crossorigin src="https://unpkg.com/react-dom@18/umd/react-dom.production.min.js"></script>
<script src="https://unpkg.com/@babel/standalone/babel.min.js"></script>
<script src="https://cdn.tailwindcss.com"></script>

<script type="text/babel">
  const { useState, useEffect, useRef } = React;

  function AlgorithmTrainer() {
    const [isRunning, setIsRunning] = useState(false);
    const [time, setTime] = useState(0);
    const [personalBest, setPersonalBest] = useState(null);
    const [lastTime, setLastTime] = useState(null);
    const [recentTimes, setRecentTimes] = useState([]);
    const [isNewPB, setIsNewPB] = useState(false);
    const [isSaving, setIsSaving] = useState(false);
    const intervalRef = useRef(null);

    useEffect(() => {
      if (window.algorithmStats) {
        setPersonalBest(window.algorithmStats.best_time);
        setRecentTimes(window.algorithmStats.recent_times || []);
      }
    }, []);

    useEffect(() => {
      if (isRunning) {
        intervalRef.current = setInterval(() => {
          setTime(prev => prev + 10);
        }, 10);
      } else {
        if (intervalRef.current) {
          clearInterval(intervalRef.current);
        }
      }
      return () => {
        if (intervalRef.current) {
          clearInterval(intervalRef.current);
        }
      };
    }, [isRunning]);

    const formatTime = (ms) => {
      const totalSeconds = Math.floor(ms / 1000);
      const milliseconds = Math.floor((ms % 1000) / 10);
      const seconds = totalSeconds % 60;
      const minutes = Math.floor(totalSeconds / 60);
      
      return `${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}.${milliseconds.toString().padStart(2, '0')}`;
    };

    const getCookie = (name) => {
      let cookieValue = null;
      if (document.cookie && document.cookie !== '') {
        const cookies = document.cookie.split(';');
        for (let i = 0; i < cookies.length; i++) {
          const cookie = cookies[i].trim();
          if (cookie.substring(0, name.length + 1) === (name + '=')) {
            cookieValue = decodeURIComponent(cookie.substring(name.length + 1));
            break;
          }
        }
      }
      return cookieValue;
    };

    const saveTimeToServer = async (timeMs) => {
      setIsSaving(true);
      try {
        const response = await fetch(window.saveTimeUrl, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            'X-CSRFToken': getCookie('csrftoken'),
          },
          body: JSON.stringify({ time_ms: timeMs }),
        });

        const data = await response.json();
        
        if (data.success) {
          setIsNewPB(data.is_new_pb);
          if (data.is_new_pb) {
            setPersonalBest(timeMs);
          }
          setRecentTimes(prev => [timeMs, ...prev].slice(0, 10));
        }
      } catch (error) {
        console.error('Erreur lors de la sauvegarde:', error);
      } finally {
        setIsSaving(false);
      }
    };

    const handleStart = () => {
      setIsRunning(true);
      setTime(0);
      setLastTime(null);
      setIsNewPB(false);
    };

    const handleStop = () => {
      if (isRunning) {
        setIsRunning(false);
        setLastTime(time);
        saveTimeToServer(time);
        
        if (!window.algorithmStats && (personalBest === null || time < personalBest)) {
          setPersonalBest(time);
        }
      }
    };

    const handleReset = () => {
      setIsRunning(false);
      setTime(0);
      setLastTime(null);
      setIsNewPB(false);
    };

    // Support clavier pour ordinateurs (si jamais)
    const handleKeyPress = (e) => {
      if (e.code === 'Space') {
        e.preventDefault();
        if (isRunning) {
          handleStop();
        } else {
          handleStart();
        }
      }
    };

    useEffect(() => {
      window.addEventListener('keydown', handleKeyPress);
      return () => window.removeEventListener('keydown', handleKeyPress);
    }, [isRunning]);

    const getAverageTime = () => {
      if (recentTimes.length === 0) return null;
      const avg = recentTimes.reduce((a, b) => a + b, 0) / recentTimes.length;
      return Math.round(avg);
    };

    const avgTime = getAverageTime();

    const getDifficultyColor = () => {
      const diff = window.algorithmDifficulty;
      if (diff.includes('Apprenti')) return 'from-green-500 to-emerald-500';
      if (diff.includes('Confirm√©')) return 'from-yellow-500 to-orange-500';
      if (diff.includes('Speed')) return 'from-red-500 to-pink-500';
      return 'from-purple-500 to-indigo-500';
    };

    return (
      <div className="min-h-screen bg-gradient-to-br from-purple-600 via-blue-600 to-cyan-500 flex items-center justify-center p-4">
        <div className="bg-white rounded-3xl shadow-2xl p-6 max-w-2xl w-full">
          {/* Header */}
          <div className="mb-6">
            <a href={window.hubUrl} className="text-blue-600 hover:text-blue-800 flex items-center gap-2 mb-4 text-lg">
              <i className="bi bi-arrow-left text-xl"></i>
              <span>Retour aux exercices</span>
            </a>
            
            <div className="text-center">
              <span className={`inline-block px-4 py-2 rounded-full text-sm font-semibold text-white bg-gradient-to-r ${getDifficultyColor()} mb-3`}>
                {window.algorithmDifficulty}
              </span>
              <h1 className="text-4xl font-bold text-gray-800 mb-3">{window.algorithmName}</h1>
              <p className="text-gray-600 text-2xl mb-2">{window.algorithmNotation} √ó {window.algorithmReps}</p>
              <p className="text-base text-gray-500">Retourne √† l'√©tat r√©solu !</p>
            </div>
          </div>

          {/* Timer Display - Plus gros pour iPad */}
          <div className="bg-gradient-to-br from-purple-50 to-blue-50 rounded-2xl p-10 mb-6">
            <div className="text-center">
              <div className="text-8xl font-bold text-gray-800 mb-3 font-mono">
                {formatTime(time)}
              </div>
              <div className={`text-2xl font-semibold ${isRunning ? 'text-green-600' : 'text-gray-500'}`}>
                {isRunning ? '‚è±Ô∏è Chrono en cours' : isSaving ? 'üíæ Sauvegarde...' : '‚è∏Ô∏è Pr√™t √† d√©marrer'}
              </div>
            </div>
          </div>

          {/* Result Display */}
          {lastTime && !isRunning && (
            <div className={`border-2 rounded-xl p-6 mb-6 text-center ${
              isNewPB ? 'bg-yellow-50 border-yellow-500' : 'bg-green-50 border-green-500'
            }`}>
              <h2 className={`text-3xl font-bold mb-2 ${isNewPB ? 'text-yellow-700' : 'text-green-700'}`}>
                {isNewPB ? 'üèÜ Nouveau Record !' : 'Termin√© ! üéâ'}
              </h2>
              <p className={`text-2xl ${isNewPB ? 'text-yellow-600' : 'text-green-600'}`}>
                Ton temps : {formatTime(lastTime)}
              </p>
            </div>
          )}

          {/* Control Buttons - GROS boutons tactiles */}
          <div className="space-y-4 mb-6">
            {!isRunning ? (
              <button
                onClick={handleStart}
                style={{ WebkitTapHighlightColor: 'transparent' }}
                className="w-full bg-gradient-to-r from-green-500 to-emerald-500 text-white py-6 rounded-2xl font-bold text-2xl shadow-lg active:scale-95 transition-all flex items-center justify-center gap-3"
              >
                <i className="bi bi-play-circle text-3xl"></i>
                D√©marrer
              </button>
            ) : (
              <button
                onClick={handleStop}
                style={{ WebkitTapHighlightColor: 'transparent' }}
                className="w-full bg-gradient-to-r from-red-500 to-pink-500 text-white py-6 rounded-2xl font-bold text-2xl shadow-lg active:scale-95 transition-all flex items-center justify-center gap-3"
              >
                <i className="bi bi-stop-circle text-3xl"></i>
                Arr√™ter
              </button>
            )}
            
            <button
              onClick={handleReset}
              style={{ WebkitTapHighlightColor: 'transparent' }}
              className="w-full bg-gray-200 text-gray-700 py-5 rounded-2xl font-bold text-xl active:bg-gray-300 transition-all flex items-center justify-center gap-3"
            >
              <i className="bi bi-arrow-clockwise text-2xl"></i>
              R√©initialiser
            </button>
          </div>

          {/* Stats - Plus gros */}
          {(personalBest || avgTime) && (
            <div className="grid grid-cols-2 gap-4 mb-6">
              {personalBest && (
                <div className="bg-yellow-50 border-2 border-yellow-300 rounded-xl p-4 text-center">
                  <div className="flex items-center justify-center gap-2 mb-2">
                    <i className="bi bi-trophy text-yellow-600 text-xl"></i>
                    <p className="text-sm text-yellow-700 font-semibold">Record</p>
                  </div>
                  <p className="text-2xl font-bold text-yellow-800">{formatTime(personalBest)}</p>
                </div>
              )}
              
              {avgTime && (
                <div className="bg-blue-50 border-2 border-blue-300 rounded-xl p-4 text-center">
                  <div className="flex items-center justify-center gap-2 mb-2">
                    <i className="bi bi-graph-up text-blue-600 text-xl"></i>
                    <p className="text-sm text-blue-700 font-semibold">Moyenne</p>
                  </div>
                  <p className="text-2xl font-bold text-blue-800">{formatTime(avgTime)}</p>
                </div>
              )}
            </div>
          )}

          {/* Instructions - Adapt√© pour tactile */}
          <div className="text-center text-base text-gray-600">
            <div className="bg-blue-50 border-2 border-blue-200 rounded-xl p-4">
              <p className="text-sm text-blue-700 font-semibold mb-2">üí° Conseil d'entra√Ænement</p>
              <p className="text-sm text-blue-600">
                Appuie sur <strong>D√©marrer</strong>, effectue {window.algorithmNotation} {window.algorithmReps} fois de suite, 
                puis appuie sur <strong>Arr√™ter</strong>. Ton cube devrait √™tre r√©solu !
              </p>
            </div>
          </div>

          {/* Leaderboard Link */}
          <div className="mt-6 text-center">
            <a href={window.leaderboardUrl} 
               style={{ WebkitTapHighlightColor: 'transparent' }}
               className="inline-flex items-center gap-2 text-purple-600 text-xl font-bold py-3 px-6 rounded-xl bg-purple-50 active:bg-purple-100 transition-all">
              <i className="bi bi-award text-2xl"></i>
              Voir le classement
            </a>
          </div>
        </div>
      </div>
    );
  }

  const root = ReactDOM.createRoot(document.getElementById('training-app'));
  root.render(<AlgorithmTrainer />);
</script>
{% endblock %}