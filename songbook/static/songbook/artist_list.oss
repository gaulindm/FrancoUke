.letter-nav-container {
    display: flex;
    align-items: center;
    gap: 10px;
    flex-wrap: nowrap;
    justify-content: space-between;
    margin-bottom: 20px;
}

.letter-nav {
    display: flex;
    flex-wrap: wrap;
    gap: 5px;
    flex-grow: 1;
}

.letter-nav a {
    text-decoration: none;
    color: #007bff;
    font-weight: bold;
    padding: 5px 8px;
}

.letter-nav a.active {
    color: #fff;
    background-color: #007bff;
    border-radius: 5px;
}

.artist-columns {
    display: flex;
    flex-wrap: wrap;
    gap: 30px;
}

.artist-column {
    flex: 1;
    min-width: 200px;
    max-width: 300px;
}

.artist-column ul {
    list-style: none;
    padding: 0;
    margin: 0;
}

.artist-column li {
    margin-bottom: 5px;
}

.all-artists-btn {
    margin-left: auto;
    white-space: nowrap;
}
